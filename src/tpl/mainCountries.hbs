{{#each this}}
  <div class='card-body'>
    <h1 class='card-title'>{{name}}</h1>
    <div class='card-info'>
      <p class='card-text'><b>Capital:</b> {{capital}}</p>
      <p class='card-text'><b>Population:</b> {{population}}</p>
      <p class='card-text'><b>Languages:</b></p>
      <ul class='list'>
        {{#each languages}}
          <li class='list-item'>{{name}}</li>
        {{/each}}
      </ul>
    </div>
    <div class='card-img'>
      <img src='{{flag}}' alt='{{name}}' width="450'" />
    </div>
  </div>
{{/each}}